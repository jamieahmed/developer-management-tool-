<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css" />
<%- include('../partials/nav') %>

<main>
  <!-- for comments -->
  <section class="comments">
    <h1><strong>Comments</strong></h1>
    <form action="/comments/<%= comment._id %>/reviews" method="POST">
      <textarea
        name="comment"
        id="content-textarea"
        cols="70px"
        rows="3px"
        placeholder="Type Your Comments Here"
      ></textarea
      ><br />
      <button type="submit">Post Comments</button>
      <% if (comment.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Review</th>
          </tr>
        </thead>
        <tbody>
          <% comment.reviews.forEach(function(review) { %>
          <tr>
            <td><%= review.createdAt.toLocaleDateString() %></td>
            <td><%= review.content %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <h3>No Reviews Yet</h3>
      <% } %>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>
